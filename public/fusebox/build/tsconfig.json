{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "importHelpers": true,
        "noLib": false,
        "lib": ["dom", "es5"],
        "outDir": "tsc/",
        "noEmitHelpers": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "../appl",
        "typeRoots": [
            "./types",
            "../node_modules/@types"
         ],
        "types": [
            "jqueryfn",
            "jasmine",
            "jquery",
            "node"
        ],
        "paths": {
            "js/*": ["./js/controller/*", "./js/utils/*", "./js/*", "./jasmine/*"],
            "ts/*": ["./components/*", "./services/*", "./*"]
          }
    }
}
